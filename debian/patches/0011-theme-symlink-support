+static int
+filter_key_file_type (const struct dirent* entry)
+{
+        bool is_key_file;
+
+        is_key_file = (strlen (entry->d_name) > 9)
+            && (strcmp (entry->d_name + strlen (entry->d_name) - 9, ".plymouth") == 0);
+
+        return is_key_file;
+}
+
+static bool
+find_settings_file (const char *splash_string,
+                    char      **theme_path)
+{
+        char* theme_dir;
+        int number_of_entries;
+        struct dirent **entries;
+        int i;
+
+        asprintf (theme_path,
+                  PLYMOUTH_THEME_PATH "%s/%s.plymouth",
+                  splash_string, splash_string);
+
+        ply_trace ("Checking if %s exists", *theme_path);
+        if (!ply_file_exists (*theme_path)) {
+                ply_trace ("File %s not found, trying first .plymouth file in dir", *theme_path);
+                asprintf (&theme_dir, "%s", dirname (*theme_path));
+                number_of_entries = scandir (theme_dir, &entries, &filter_key_file_type, alphasort);
+                // Use first .plymouth file in directory
+                if (number_of_entries >= 1) {
+                        free (*theme_path);
+                        asprintf (theme_path, "%s/%s", theme_dir, entries[0]->d_name);
+                }
+                for (i = 0; i < number_of_entries; i++) {
+                        free (entries[i]);
+                        entries[i] = NULL;
+                }
+                free (theme_dir);
+                free (entries);
+                entries = NULL;
+
+                if (number_of_entries <= 0)
+                        return false;
+        }
+        return true;
+}
